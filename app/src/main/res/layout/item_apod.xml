<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/history_margin">

  <ImageView
    android:id="@+id/thumbnail"
    android:layout_width="@dimen/history_width"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/history_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/title"
    app:layout_constraintHorizontal_weight="3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:scaleType="center"
    android:adjustViewBounds="true"/>

  <TextView
    android:id="@+id/title"
    android:layout_width="@dimen/history_width"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/history_margin"
    android:layout_marginEnd="@dimen/history_margin"
    app:layout_constraintBottom_toTopOf="@+id/access"
    app:layout_constraintEnd_toStartOf="@+id/date"
    app:layout_constraintHorizontal_weight="4"
    app:layout_constraintStart_toEndOf="@id/thumbnail"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"/>

  <TextView
    android:id="@+id/date"
    android:layout_width="@dimen/history_width"
    android:layout_height="wrap_content"
    app:layout_constraintBaseline_toBaselineOf="@id/title"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_weight="3"
    app:layout_constraintStart_toEndOf="@id/title"/>

  <TextView
    android:id="@+id/access"
    android:layout_width="@dimen/history_width"
    android:layout_height="wrap_content"
    android:textAlignment="viewStart"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/title"
    app:layout_constraintTop_toBottomOf="@id/title"/>





</androidx.constraintlayout.widget.ConstraintLayout>